MDScreen:
    name:"login"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon:"arrow-left"
            pos_hint:{"center_y":.95}
            user_font_size:"30sp"
            theme_text_color:"Custom"
            text_color:rgba(26,24,58,255)
            on_release:
                root.manager.transition.direction="right"
                root.manager.current="main"


        MDLabel:
            text: "W E L C O M E"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": .59,"center_y": .85}
            color: rgba(0,0,59, 255)
        MDLabel:
            text: "Sign in to continue"
            font_name: "BPoppins"
            font_size: "18sp"
            pos_hint: { "center_x": .59,"center_y": .79}
            color: rgba(135,135,193, 255)

        MDFloatLayout:
            size_hint:.7,.07
            pos_hint:{ "center_x": .5,"center_y": .63}
            TextInput:
                hint_text:"Email"
                font_name:"MPoppins"
                size_hint_y:.75
                pos_hint:{ "center_x": .43,"center_y": .5}
                background_color:1,1,1,0
                foreground_color:rgba(0,0,59,255)
                font_size:"14sp"
                cursor_width:"2sp"
                multiline:False
            MDFloatLayout:
                pos_hint:{ "center_x": .43,"center_y": .0}
                size_hint_y:.03
                md_bg_color:rgba(178,178,178,255)

        MDFloatLayout:
            size_hint:.7,.07
            pos_hint:{ "center_x": .5,"center_y": .5}
            TextInput:
                hint_text:"Password"
                font_name:"MPoppins"
                size_hint_y:.75
                pos_hint:{ "center_x": .43,"center_y": .5}
                background_color:1,1,1,0
                foreground_color:rgba(0,0,59,255)
                font_size:"14sp"
                cursor_width:"2sp"
                multiline:False
                password:True
            MDFloatLayout:
                pos_hint:{ "center_x": .43,"center_y": .0}
                size_hint_y:.03
                md_bg_color:rgba(178,178,178,255)

        Button:
            text: "LOGIN"
            size_hint: .76, .075
            pos_hint: {"center_x": .48, "center_y": .4}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgba: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[5]
        MDTextButton:
            text:"Forgot Password?"
            pos_hint:{"center_x":.5,"center_y":.32}
            color:rgba(68,78,132,255)
            font_size:"12sp"
            font_name:"BPoppins"
        MDLabel:
            text:"or"
            color :rgba(52,0,231,255)
            pos_hint:{"center_y":.28}
            font_size:"13sp"
            font_name:"BPoppins"
            halign:"center"
        MDFloatLayout:
            mg_bg_color:rgba(178,178,178,255)
            size_hint:.3,.002
            pos_hint:{"center_x":.7,"center_y":.218}
        MDLabel:
            text:"Social Media Login"
            font_name:"BPoppins"
            font_size:"13sp"
            halign:"center"
            pos_hint:{"center_y":.22}
            color : rgba(135,133,193,255)
        MDGridLayout:
            cols:3
            size_hint:.48,.07
            pos_hint:{"center_x":.5,"center_y":.12}
            Image:
                source:"google.jpg"
            Image:
                source:"fb.png"
            Image:
                source:"li.png"
        MDLabel:
            text:"Don't have an account?"
            font_name:"BPoppins"
            font_size:"11sp"
            pos_hint:{"center_x":.68,"center_y":.04}
            color : rgba(135,133,193,255)

        MDTextButton:
            text:"Sign Up"
            font_name:"BPoppins"
            font_size:"11sp"
            pos_hint:{"center_x":.8,"center_y":.04}
            color : rgba(135,133,193,255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"