MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "logo.png"
            pos_hint: {"center_x": .18, "center_y": .95}
        Image:
            source: "logo.png"
            size_hint: .8, .8
            pos_hint: {"center_x": .5, "center_y": .65}
        MDLabel:
            text: "H e l l  o   !"
            halign: "center"
            font_style: "H4"
            font_size: "23sp"
            pos_hint: {"center_y": .38}
            color: rgba(34, 34, 34, 255)
        MDLabel:
            text: "best place to find the best deals"
            font_style: "H4"
            font_size: "13sp"
            size_hint: .85,.85
            pose_hint: { "center_x": .5,"center_y": .3}
            halign: "center"
            color: rgba(127,127,127, 255)

        Button:
            text: "SIGNUP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background_color: 0, 0, 0, 0
            font_name: "Roboto"
            color: rgba(52, 0, 231, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            canvas.before:
                Color:
                    rgba: rgba(52, 0, 231, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5,5,5,5,100
        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0, 0, 0, 0
            font_name: "Roboto"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgba: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[5]
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5,5,5,5,100

